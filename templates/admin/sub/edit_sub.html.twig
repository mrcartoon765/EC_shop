{% include "common/header_admin.html.twig" %}
<main>
	<div class="wrapper">
		<div class="container">
			<div class="wrapper-title">
				<h3>関連商品編集</h3>
			</div>
			<form class="edit-form" action="{{constant('config\\Bootstrap::ENTRY_URL')}}/update_sub.php" method="POST" enctype="multipart/form-data">
				<input type="hidden" name='id' value={{ sent_id }}>
				<div class="form-group">
					<p>商品名</p>
					<input type='text' name='title' value="{{ sub['title'] }}">
				</div>
				<div class="form-group">
					<p>説明文</p>
					<textarea name='detail'>{{ sub['detail'] }}</textarea>
				</div>
				<div class="container">
					<div class="row">
						<div class="col-2">
							<div class="form-group">
								<p>価格</p>
								<input type='text' name='price' value="{{ sub['price'] }}" required>
							</div>
						</div>
						<div class="col-10">
							<div class="form-group">
								<p>画像</p>
								<img src="{{APP_URL}}/shopping/image/sub/{{sub['image']}}" style="height:130px" alt="">
								<input type='file' name='image' class="imgform" value="{{ sub['image'] }}" required>
							</div>
						</div>
						<div class="col-2">
							<div class="form-group">
								<p>発売日</p>
								<input type='text' name='date' value={{ sub['date'] }} required>
							</div>
						</div>
					</div>
				</div>
				<div class="form-group">
					<p>関連商材名</p>
					<select name="ctg_id">
						<option value="1">{{book_ctg[0]}}</option>
						<option value="2">{{book_ctg[1]}}</option>
						<option value="3">{{book_ctg[2]}}</option>
						<option value="4">{{book_ctg[3]}}</option>
						<option value="5">{{book_ctg[4]}}</option>
						<option value="6">{{book_ctg[5]}}</option>
					</select>
					<div class="row">
						<div class="col">
							<div class="form-group">
								<p>カテゴリ1</p>
								<select name="ctg1">
									<option value="1">食品</option>
									<option value="2">サプリ</option>
									<option value="3">ガジェット</option>
									<option value="4">家具・寝具</option>
									<option value="5">美容品</option>
								</select>
							</div>
						</div>
						<div class="col">
							<div class="form-group">
								<p>カテゴリ2</p>
								<select name="ctg2">
									<option value="1">ストレス対策</option>
									<option value="2">アンチエイジング</option>
									<option value="3">集中力改善</option>
									<option value="4">睡眠改善</option>
									<option value="5">ダイエット</option>
								</select>
							</div>
						</div>
						{# <input type="hidden" name="last_update"> #}
						<button type="submit" class="btn btn-info">更新する</button>
					</form>
				</div>
			</div>
		</main>
		{% include "common/footer.html.twig" %}
