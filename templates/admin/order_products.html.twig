{% include "common/header.html.twig" %}
	<main>
            <div class="wrapper">
                <div class="container">
                    <div class="wrapper-title">
                        <h3>受注明細</h3>
                    </div>
                    <div class="list">
                    <h4>購入者情報</h4>
                        <table>
                        <tbody>
                        <tr><th>氏名</th><td>{{ orders['first_name'] }}</td></tr>
                        <tr><th>郵便番号</th><td>{{ orders['zip1'] }}-{{ orders['zip2'] }}</td></tr>
                        <tr><th>住所</th><td>{{ orders['address'] }}</td></tr>
                        <tr><th>メールアドレス</th><td>{{ orders['mail'] }}</td></tr>
                        <tr><th>電話番号</th><td>{{ orders['tel1'] }}-{{ orders['tel2'] }}-{{ orders['tel3'] }}</td></tr>
                        <tr><th>合計金額</th><td>￥{{ orders['total'] }}</td></tr>
                        <tr><th>受注日時</th><td>{{ orders['created_at'] }}</td></tr>
                        <tr><th>更新日時</th><td>{{ orders['update_at'] }}</td></tr>
                        <tr><th>注文状況</th><td>
                        {% if  orders['order_status'] == 0 %}
                        <button type="button" class="btn btn-red">受付中</button>
                        <button type="button" class="btn btn-blue" onclick="location.href='../../admin/update_order_status.php?id={{ orders['id'] }}'">発送済みにする</button>
                        {% else %}
                        <button type="button" class="btn btn-blue">発送済</button>
                        <button type="button" class="btn btn-red" onclick="location.href='../../admin/update_order_status.php?id={{ orders['id'] }}'">発送を取り消す</button>
                        {% endif %}
                        </td></tr>
                        </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
 {% include "common/footer.html.twig" %}
         <footer>
        <div class="container">
            <p>Copyright @ 2018 SQUARE, inc</p>
        </div>
    </footer>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</body>

</html>