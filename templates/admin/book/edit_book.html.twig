    {% include "common/header_admin.html.twig" %}
	<main>
        <div class="wrapper">
            <div class="container">
                <div class="wrapper-title">
                    <h3 class="text-center">書籍編集</h3>
                </div>
                <form class="edit-form" action="{{constant('config\\Bootstrap::ENTRY_URL')}}/update_book.php" method="POST" enctype="multipart/form-data">
                    <input type="hidden" name='id' value="{{ sent_id }}">
                    <div class="form-group">
                        <h3 class="text-center">タイトル</p>
                        <input class="border border-3 border-info" type='text' name='title' value="{{ book['title'] }}">
                    </div>
                    <div class="form-group">
                        <h3 class="text-center">説明文</p>
                        <textarea class="border border-3 border-info" name='detail'>{{ book['detail'] }}</textarea>
                    </div>
                    <div class="form-group">
                        <h3 class="text-center">価格</p>
                        <input class="border border-3 border-info" type='text' name='price' value="{{ book['price'] }}" required>
                    </div>
                    <div class="form-group">
                        <h3 class="text-center">画像</p>
                        <input class="border border-3 border-info" type='file' name='image'  class="imgform" value="{{ book['image'] }}" required>
                    </div>
                    <div class="form-group">
                        <h3 class="text-center">発売日</p>
                        <input class="border border-3 border-info" type='text' name='date' value="{{ book['date'] }}" required>
                    </div>
                    <div class="form-group">
                        <h3 class="text-center">関連商材ID</p>
                        <input class="border border-3 border-info" type='text' name='ctg_id' value="{{ book['ctg_id'] }}" required>
                    </div>
                    <button type="submit" class="btn btn-success">更新する</button>
                </form>
            </div>
        </div>
    </main>
 {% include "common/footer.html.twig" %}