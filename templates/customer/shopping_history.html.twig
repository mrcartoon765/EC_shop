{% include "common/header.html.twig" %}
<body>

	<main>
		<div class="container-flluid">
			<br><br><br>
			<div class="wrapper-title">

				<h2>購入履歴</h2>
			</div>
			<div class="container">
				{% set a = 0 %}
				{% for value in history %}
					{% set id = history[a]['id'] %}
					<div class="title"><h3>
					{{history[a]['created_at']|slice(0,10)}}
					</h3>
					</div>
					<div class="card">
						<div class="card-title">
						</div>
						<div class="card-body">
							<div class="row">
									<div class="col-6">
										<form action="{{customer}}shopping_history_detail.php" method="post">
											<button type="submit" class="btn btn-primary btn-lg" value={{id}} name="order_id">購入詳細</button>
										</form>
									</div>
										<div class="col-6"><br><h4>
										合計金額:￥{{  history[a]['total']|number_format()}}
										</h4><br>
										</div>
										<div class="text-center"><h4>
										配送状況
										</h4>
										</div>
										{% if 0 == value['order_status'] %}
										<button class="btn btn-primary disabled btn-lg">発送準備中</button>
										{% else %}
										<button class="btn btn-danger disabled btn-lg">発送済み</button>
										{% endif %}
								</div>
							</div>
						</div>

						{% set a = a + 1 %}
					{% endfor %}
				</div>
			</div>
		</div>
		<br><br></body>
</body></div></main>{% include "common/shopping/hidden_input_end.html.twig" %}{% include "common/footer.html.twig" %}
