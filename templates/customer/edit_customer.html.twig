{% include "common/header.html.twig" %}
	<main>
            <div class="container">
            <body class="text-center">
            <div class="wrapper last-wrapper">
  <main class="form-signin">
                    <div class="wrapper-title">
                        <h3>ユーザーデータ編集</h3>
                        <p>個人情報編集</p>
                    </div>
<form method="POST" action="{{APP_URL}}/create_account/confirm.php">
お名前(氏名)<span class="error">*</span>
<div class="row">
<div class="col">
姓<input class="text-center border-4 border-info" type="text" name="family_name" value="{{ customer['family_name'] }}" required>
{% if errArr.family_name | length > 0 %}<br><span class="error">{{ errArr.family_name }}</span>{% endif %}
</div>
<div class="col">
名<input  class="text-center border-4 border-info" type="text" name="first_name"  value="{{ customer['first_name'] }}" required>
{% if errArr.first_name | length > 0 %}<br><span class="error">{{ errArr.first_name }}</span>{% endif %}
</div>
</div>
<br>
お名前(かな)
<div class="row">
<div class="col">
せい<input class="text-center border-4 border-info" type="text" name="family_name_kana" value="{{customer['family_name_kana']}}">
</div>
<div class="col">
めい<input class="text-center border-4 border-info" type="text" name="first_name_kana"  value="{{customer['first_name_kana']}}">
</div>
</div>
<br>


生年月日<span class="error">*</span>
<div class="row">

<div class="col-2"></div>

<div class="col px-0">
<select name="year" class="border-4 border-info">
{% for index, label in yearArr %}
<option value="{{index}}" {% if year == index %} selected {% endif %}>{{ label }}</option>
{% endfor %}
</select>年
</div>

<div class="col px-0">
<select name='month' class="border-4 border-info">
{% for index, label in monthArr %}
<option value="{{index}}" {% if month == index %} selected {% endif %}>{{ label }}</option>
{% endfor %}
</select>月
</div>

<div class="col px-0">
<select name='day' class="border-4 border-info">
{% for index, label in dayArr %}
<option value="{{index}}" {% if day == index %} selected {% endif %}>{{ label }}</option>
{% endfor %}
</select>日
{% if errArr.year | length > 0 %}<br><span class="error">{{errArr.year}}</span>{% endif %}
{% if errArr.month | length > 0 %}<br><span class="error">{{errArr.month}}</span>{% endif %}
{% if errArr.day | length > 0 %}<br><span class="error">{{errArr.day}}</span>{% endif %}
</div>

<div class="col-2"></div>

</div>

<br>
郵便番号<span class="error">*</span>
<div class="row">
<div class="col px-0">
<input type="number" name="zip1" class="text-center border-4 border-info" value="{{customer['zip1']}}" id="zip1" size="3" maxlength="1000"  required>
{% if errArr.zip1 | length > 0 %}<br><span class="error">{{errArr.zip1}}</span>{% endif %}
</div>
ー
<div class="col px-0">
<input type="number" name="zip2" class="text-center border-4 border-info" value="{{customer['zip2']}}" id="zip2" size="4" maxlength="10000"  required>
{% if errArr.zip2 | length > 0 %}<br><span class="error">{{errArr.zip2}}</span>{% endif %}
</div>
<input type="hidden" name="entry_url" id="entry_url" value="../create_account/">
<button type="button" class="btn btn-submit btn-gray" name="address_search" id="address_search">〒から住所を入力</button>

</div>
住所<span class="error">*</span>
<input type="text" name="address" class="text-center border-4 border-info" value="{{customer['address']}}" id="address" size="40"  required>
{% if errArr.address | length > 0 %}<br><span class="error">{{errArr.address}}</span>{% endif %}
<br>
電話番号<span class="error">*</span>
<div class="row">
<div class="col">
<input class="text-center border-4 border-info" type="text" name="tel1" value="{{customer['tel1']}}" size="6" maxlength="6"  required>
</div>ー
<div class="col">
<input class="text-center border-4 border-info" type="text" name="tel2" value="{{customer['tel2']}}" size="6" maxlength="6"  required>
</div>ー
<div class="col">
<input class="text-center border-4 border-info" type="text" name="tel3" value="{{customer['tel3']}}" size="6" maxlength="6"  required>
</div>
{% if errArr.tel1 | length > 0 %}<br><span class="error">{{errArr.tel1}}</span>{% endif %}
</div>
<br>
備考
<textarea class="border-4 border-info" name="contents" rows="4" cols="40">{{customer['contents']}}</textarea>

<p>EC_BOOKからのお知らせを受信しますか？</p>
<input type="hidden" name="dm" value="受信しない">
<input type="checkbox" class="checkbox" name="dm" value="受信する" checked>
<span>受信する</span>

<div class="text-center d-grid gap-2">
<br>
<input type="hidden" name="edit_customer" method="POST" value="1">
<button type="submit" name="confirm" value=1 class="btn btn-submit">内容を確認する</button>
</div>
</form>
</main>
</div>
            </body>
</div>
 {% include "common/footer.html.twig" %}